<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
        <TextView
            android:id="@+id/caloriesConsumed"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="UserID:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#026816"
            />
        <TextView
            android:id="@+id/HeartRate"
            android:layout_below="@+id/caloriesConsumed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Account No:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#026816"
            />
        <TextView
            android:id="@+id/SleepingFactor"
            android:layout_below="@+id/HeartRate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Gender:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#026816"
            />
        <TextView
            android:id="@+id/Smoker"
            android:layout_below="@+id/SleepingFactor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Smoking:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#026816"
            />
        <TextView
            android:id="@+id/alcohol"
            android:layout_below="@+id/Smoker"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="AlcoholConsumption:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#026816"
            />
        <TextView
            android:id="@+id/bmi_status"
            android:layout_below="@+id/alcohol"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="BMI status:"
            android:textAlignment= "center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#026816"
            />
        <TextView
            android:id="@+id/diet"
            android:layout_below="@+id/bmi_status"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Diet:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#026816"
            />
        <TextView
            android:id="@+id/stress"
            android:layout_below="@+id/diet"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Stress:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#026816"
            />
        <TextView
            android:id="@+id/retirement"
            android:layout_below="@+id/stress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Retirement:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#026816"
            />
        <TextView
            android:id="@+id/healthstatus"
            android:layout_below="@+id/retirement"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Life Expectancy:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#026816"
            />
        <TextView
            android:id="@+id/pf"
            android:layout_below="@+id/healthstatus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="PensionFund(Annual):"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#0000ff"
            />
        <TextView
            android:id="@+id/healthinsurance"
            android:layout_below="@+id/pf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HealthInsurance(Annual):"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#ff0000"
            />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_top"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>